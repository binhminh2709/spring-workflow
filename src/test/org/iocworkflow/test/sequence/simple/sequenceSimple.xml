<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- ==========================================================================
*     SPRING BEAN DEFINITION FILE
*     Javaworld Article - Simple Sequence Workflow Example
  ========================================================================== -->
<beans>
	
	<bean id="log4jconfig"
		class="org.iocworkflow.test.Log4jConfig">
		<property name="configXml">
			<value>org/iocworkflow/test/log4j.xml</value>
		</property>
	</bean>
	


	<bean id="activity1" 
		class="org.iocworkflow.test.sequence.simple.Activity1"/>
		
	<bean id="activity2" 
		class="org.iocworkflow.test.sequence.simple.Activity2"/>
		
	<bean id="activity3" 
		class="org.iocworkflow.test.sequence.simple.Activity3"/>			
		
	<bean id="defaultErrorHandler" 
		class="org.iocworkflow.test.sequence.simple.SimpleErrorHandler"/>
		
	<bean id="simpleContext"
		class="org.iocworkflow.test.sequence.simple.SimpleContext" singleton="false"/>	
		
		
	<!-- simple sequence workflow process -->
	<bean id="simpleProcessor" class="org.iocworkflow.SequenceProcessor" >
		<property name="activities">
			<list>
				<ref bean="activity1"/>
				<ref bean="activity2"/>
				<ref bean="activity3"/>
			</list>
		</property>
		<property name="defaultErrorHandler">
			<ref bean="defaultErrorHandler"></ref>
		</property>
		<property name="processContextClass">
			<value>org.iocworkflow.test.sequence.simple.SimpleContext</value>
		</property>
	</bean>

	
</beans>
